<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:padding="10dp"
        android:background="@drawable/box_background"
        android:elevation="3dp"
        >

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginStart="5dp"
            android:text="Name:"
            android:maxLines="1"
            android:textSize="14sp"
            android:padding="2dp"
            android:fontFamily="@font/poppins_regular"
            />

        <TextView
            android:id="@+id/items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginStart="5dp"
            android:text="items"
            android:textSize="14sp"
            android:padding="2dp"
            android:fontFamily="@font/poppins_regular"
            />
        

        <TextView
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginStart="5dp"
            android:text="location"
            android:maxLines="2"
            android:textSize="16sp"
            android:padding="2dp"
            android:fontFamily="@font/poppins_medium"
            />

        <TextView
            android:id="@+id/bill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginStart="5dp"
            android:text="bill"
            android:maxLines="1"
            android:textSize="16sp"
            android:padding="2dp"
            android:fontFamily="@font/poppins_medium"
            />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            >
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                >
                
                <TextView
                    android:id="@+id/pendingText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pending"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:textColor="@color/primaryColor"
                    />



                <TextView
                    android:id="@+id/confirmedText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Confirmed"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/lightBlack"
                    />
                <TextView
                    android:id="@+id/deliveredText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivered"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/lightBlack"
                    />
                
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="23"
                android:gravity="center"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="3dp"
                >

                <View
                    android:id="@+id/viewOne"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/circular_box"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/primaryColor"
                    android:layout_weight="1"
                    />

                <View
                    android:id="@+id/viewTwo"
                    android:layout_width="15dp"
                    android:layout_height="2dp"
                    android:background="@drawable/circular_box"
                    android:layout_gravity="center"
                    android:layout_weight="10"
                    android:backgroundTint="@color/lightBlack"
                    />
                <View
                    android:id="@+id/viewThree"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/circular_box"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:backgroundTint="@color/lightBlack"
                    />

                <View
                    android:id="@+id/viewFour"
                    android:layout_width="15dp"
                    android:layout_height="2dp"
                    android:background="@drawable/circular_box"
                    android:layout_gravity="center"
                    android:layout_weight="10"
                    android:backgroundTint="@color/lightBlack"
                    />
                <View
                    android:id="@+id/viewFive"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/circular_box"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:backgroundTint="@color/lightBlack"
                    />
            </LinearLayout>
            
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancelOrderButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel Order"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/white"
            android:background="@drawable/button_background_4"
            android:layout_marginTop="20dp"
            android:layout_marginRight="7dp"
            android:layout_marginLeft="7dp"
            android:layout_marginBottom="3dp"
            android:visibility="gone"
            />


    </LinearLayout>
</LinearLayout>